{
  "name": "template-node-ts",
  "version": "0.0.4",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "repository": "https://github.com/constrod/template-node-ts",
  "bugs": {
    "url": "https://github.com/constrod/template-node-ts/issues"
  },
  "contributors": [
    {
      "name": "Rodrick Alcantara",
      "url": "https://github.com/constROD"
    }
  ],
  "description": "Custom Template for Node TypeScript",
  "author": "Rodrick Alcantara <rialcantara21@gmail.com>",
  "license": "MIT",
  "scripts": {
    "setup": "cat .nvmrc | xargs nvm use",
    "dev": "tsnd --transpile-only --respawn --files ./src/index.ts",
    "clean": "rm -rf ./build",
    "build": "pnpm run clean && tsc",
    "start": "pnpm run build && pm2 start ./build/index.js",
    "test": "jest",
    "analyze": "pnpm run build && source-map-explorer ./build/**/*.js",
    "format": "prettier --write ./src/**/*.ts",
    "lint": "eslint ./src --ext .js,.ts",
    "lint:fix": "eslint ./src --fix --ext .js,.ts",
    "typeorm": "ts-node -r tsconfig-paths/register ./src/typeorm/cli.ts",
    "migration:run": "pnpm run typeorm migration:run",
    "migration:generate": "pnpm run typeorm migration:generate",
    "migration:create": "pnpm run typeorm migration:create",
    "migration:revert": "pnpm run typeorm migration:revert",
    "git:develop": "git checkout develop && git pull origin develop && git branch | grep -v \"main\\|staging\\|develop\" | xargs git branch -D",
    "pre-commit": "lint-staged --allow-empty --concurrent false",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/minimist": "^1.2.2",
    "@types/node": "^16.11.10",
    "@types/supertest": "^2.0.11",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "cspell": "^6.14.3",
    "eslint": "8.2.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "^16.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-jest": "^25.3.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^6.0.0",
    "jest": "^27.4.5",
    "jest-mock-extended": "^2.0.4",
    "lint-staged": "^12.1.2",
    "minimist": "^1.2.7",
    "prettier": "^2.5.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "axios": "^1.1.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^2.28.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.3.0",
    "typeorm": "^0.3.10",
    "yup": "^0.32.11"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": "eslint --cache --fix",
    "**/*": "prettier --write --ignore-unknown"
  }
}